{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "$"       : false
  },
  {
    "plugins": [
      "babel"
    ]
  },
  "rules": {
    "generator-star-spacing" : 0,
    "camelcase": 0,
    "max-len": [2, 120, 2],
    "semi" : [2, "never"],
    "react/prop-types": [2, {}],
    "react/self-closing-comp": 0
  }
}

